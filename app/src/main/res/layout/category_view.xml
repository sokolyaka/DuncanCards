<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/category_card_height"
    android:layout_gravity="center"
    android:layout_margin="@dimen/category_card_margin"
    card_view:cardCornerRadius="@dimen/category_card_corner_radius">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/preview"
            android:layout_width="@dimen/category_preview_width"
            android:layout_height="@dimen/category_preview_height"
            android:layout_margin="@dimen/category_preview_margin"
            android:layout_centerHorizontal="true"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/title"
                  android:layout_margin="@dimen/category_title_margin"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Transport"
                  android:textAllCaps="true"
                  android:textColor="@color/primaryText"
                  android:layout_alignParentTop="true"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/cards_count"
                  android:layout_margin="@dimen/category_cards_count_margin"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="15"
                  android:textColor="@color/secondary_text"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
